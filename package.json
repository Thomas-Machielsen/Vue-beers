{
  "name": "vue-beers",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "eslint": "eslint . || exit 0",
    "lint": "vue-cli-service lint",
    "watch:js": "onchange '**/**/*.js' -i -- npm run eslint"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^13.1.0",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.12",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.12",
    "@vue/cli-service": "^3.0.0-rc.12",
    "eslint": "^5.4.0",
    "eslint-plugin-import": "^2.14.0",
    "node-sass": "^4.9.3",
    "onchange": "^4.1.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
